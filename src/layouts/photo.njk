---
layout: page.njk
---

{% from 'image-waterfall.njk' import imageWaterfall %}
{% from 'image.njk' import image %}

<div class="image-info">
    <div class="image-info__image-conteiner">
        <div class="image-info__image-preload-conteiner" style="aspect-ratio: {{ aspect_ratio }};">
            {{ image(
                src='images/' + name + '.' + ex,
                desc=description,
                source_list=[
                    'images/' + name + '_medium.' + ex
                ],
                class='image-info__image'
            ) }}
            <div class="image-info-actions">
                <a href="images/{{ name }}.{{ ex }}" class="image-info-actions__link element--hover-1" download="">
                    <div class="image-info-actions__icon">
                        <svg width="20" height="20" aria-hidden="true">
                            <use href="/svg/icons.svg#download" />
                        </svg>
                    </div>
                    <span>Скачать</span>
                </a>
                <a href="images/{{ name }}.{{ ex }}" class="image-info-actions__link element--hover-1" target="blank">
                    <div class="image-info-actions__icon">
                        <svg width="20" height="20" aria-hidden="true">
                            <use href="/svg/icons.svg#open-full" />
                        </svg>
                    </div>
                    <span>Открыть в новой вкладке</span>
                </a>
            </div>
        </div>
    </div>
    <div class="image-info-content {{ 'short' if aspect_ratio == '9/16' }}">
        <div class="image-info-content__info">
            <ul class="tags">
                {% for item in tags %}
                    <li>{{ item }}</li>
                {% endfor %}
            </ul>
            <div>
                {% for item in info %}
                    <div class="image-info-content__row">
                        <h3 class="image-info-content__topic">{{ item.title }}</h3>
                        <span>{{ item.value }}</span>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{{ imageWaterfall({
    collection: collections.photos,
    label: 'Последние фотографии',
    max_images: 15
}) }}